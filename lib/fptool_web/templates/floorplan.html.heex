<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com">
    </script>
  </head>
  <body>
    <div class="p-20 w-[75%]">
      <svg
        id="svg-canvas"
        viewBox={@viewbox}
        preserveAspectRatio="none"
        class="w-full"
        style="transform: scale(1, -1); transform-origin: center;"
      >
        <g id="walls">
          <%= for wall <- @walls do %>
            <FptoolWeb.Floorplan.wall {wall} />
          <% end %>
        </g>
      </svg>
    </div>
  </body>
</html>
